<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:toolbar="http://schemas.android.com/apk/res-auto"
    android:id="@id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorPrimary"
    toolbar:popupTheme="@style/Rebase.PopupOverlay">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingStart="4dp"
        android:gravity="center_vertical"
        tools:ignore="RtlHardcoded, RtlSymmetry">

        <de.hdodenhof.circleimageview.CircleImageView
            style="@style/Widget.Rebase.MainPage.Logo"
            android:id="@+id/logo"
            toolbar:civ_border_color="@color/logo_border"
            toolbar:civ_border_width="2dp"
            android:src="@drawable/avatar_drakeet_flat"/>

        <TextView
            style="@style/Widget.Rebase.MainPage.Title"
            android:id="@android:id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:letterSpacing="0.28"
            android:text="@string/rebase_name"/>

    </LinearLayout>

</android.support.v7.widget.Toolbar>
